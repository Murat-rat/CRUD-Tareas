<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="550.0" prefWidth="570.0" spacing="5.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.crud_tareas.TareasController">
   <children>
        <VBox alignment="CENTER" prefWidth="100.0" spacing="5.0" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
         <children>
            <VBox spacing="5.0">
               <children>
                  <TextField fx:id="eTitulo" promptText="Título" />
                  <TextArea fx:id="eDescripcion" prefHeight="70.0" prefWidth="423.0" promptText="Descripción..." />
               </children>
            </VBox>
            <VBox alignment="CENTER" spacing="15.0">
               <children>
                  <ComboBox fx:id="ePrioridad" prefWidth="150.0" promptText="Prioridad" visibleRowCount="3" />
                  <DatePicker fx:id="eFecha" promptText="Fecha" />
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="7.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" prefHeight="33.0" prefWidth="377.0" spacing="7.0">
         <children>
                <Button fx:id="Btn_agregar" onAction="#agregarDatos" prefHeight="26.0" prefWidth="70.0" text="Agregar" />
                <Button fx:id="Btn_eliminar" mnemonicParsing="false" prefHeight="26.0" prefWidth="70.0" text="Eliminar" />
                <Button fx:id="Btn_limpiar" mnemonicParsing="false" prefHeight="26.0" prefWidth="70.0" text="Limpiar" />
         </children>
      </HBox>
        <TableView fx:id="tablaTareas" editable="true">
            <columns>
                <TableColumn fx:id="id" prefWidth="43.0" sortable="false" text="ID" />
                <TableColumn fx:id="titulo" prefWidth="106.0" sortable="false" text="Título" />
                <TableColumn fx:id="descripcion" prefWidth="236.0" sortable="false" text="Descripción" />
                <TableColumn fx:id="prioridad" prefWidth="93.0" sortable="false" text="Prioridad" />
                <TableColumn fx:id="fechaLimite" prefWidth="91.0" sortable="false" text="Fecha Límite" />
            </columns>
        </TableView>
   </children>
</VBox>
